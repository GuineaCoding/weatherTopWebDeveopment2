<section class="page-gradient">
  <div class="title px-3 py-3">
    <h3 class="is-inline">Station Name: {{station.name}}</h3>
  </div>
  <form class="box green-box" action="/station/{{station.id}}/updateReading/{{reading.id}}" method="POST">
    <label class="has-text-white">Add details:</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field is-narrow">
          <div class="control">
            <div class="select is-fullwidth">
              <select name="code" required>
                <option value="" disabled selected>Select Code</option>
                <option value="100">100</option>
                <option value="200">200</option>
                <option value="300">300</option>
                <option value="400">400</option>
                <option value="500">500</option>
                <option value="600">600</option>
                <option value="700">700</option>
                <option value="800">800</option>
              </select>
            </div>
          </div>
        </div>
        <div class="field">
          <input class="input" type="number" placeholder="Enter Temperature" step="0.01" name="temperature"
            value="{{reading.temperature}}" required>
        </div>
        <div class="field">
          <input class="input" type="number" placeholder="Enter Wind Speed" name="windSpeed" step="0.01" min="0"
            value="{{reading.windSpeed}}" required>
        </div>
        <div class="field">
          <input type="number" class="input" placeholder="Enter Pressure" name="pressure" step="0.01" min="0"
            value="{{reading.pressure}}" required>
        </div>
        <div class="field">
          <input type="number" class="input" placeholder="Enter Wind Direction" name="windDirection" step="0.01" min="0" max="359"
            value="{{reading.windDirection}}" required>
        </div> 
      </div>
    </div>
    <div class="control">
      <button class="button is-primary is-fullwidth mb-2">Update Station</button>
    </div>
    <div class="control">
      <a href="/dashboard" class="button is-danger is-fullwidth mb-2">Cancel</a>
    </div>
  </form>

</section>