
<form class="box" action="/station/{{station.id}}/addreading" method="POST">
  <label>Add details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="number" placeholder="Code" name="code" required>
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Enter Temperature" name="temperature" required>
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Enter Wind Speed" name="windSpeed" required>
      </div>
      <div class="field">
        <input type="number" class="input" placeholder="Enter Pressure" name="pressure" required>
      </div>
      <div class="field">
        <input type="number" class="input" placeholder="Enter Wind Direction" name="windDirection" required>
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Reading</button>
</form>
